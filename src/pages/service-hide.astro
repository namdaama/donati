---
import Layout from '../layouts/Layout.astro';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import FooterDivider from '../components/overview/FooterDivider.astro';
import PageIntroduction from '../components/common/PageIntroduction.astro';
import SpaceServiceSection from '../components/services/SpaceServiceSection.astro';
import SpaceCTASection from '../components/services/SpaceCTASection.astro';
import { spaceServices, spaceServiceDetails } from '../config/services/space';
---

<Layout
  title="星空事業"
  description="星空観望会、プラネタリウム解説など、宇宙の不思議を探検するサービスをご提供します"
>
  <Header />

  <main class="flex-grow relative overflow-hidden">
    <!-- 背景装飾とスタイル -->
    <style>
      /* backGround.png を背景として使用 */
      body {
        background-image: url('/images/rough/backGround.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
      }

      .star {
        position: absolute;
        background: white;
        clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
        opacity: 0.7;
      }

      .circle-decoration {
        position: absolute;
        background: white;
        border-radius: 50%;
        opacity: 0.3;
      }
    </style>

    <div class="max-w-4xl mx-auto px-4 py-8 md:py-16 relative z-10">
      <!-- ページタイトルとイントロダクション -->
      <PageIntroduction
        title={spaceServices.mainTitle}
        description={spaceServices.subtitle}
        content={spaceServices.description}
      />

      <!-- HIDEキャラクター表示 -->
      <div class="flex justify-center mb-12 md:mb-16">
        <div class="flex flex-col items-center">
          <img
            src={spaceServices.characterIconUrl}
            alt="HIDE"
            class="w-48 h-48 mb-2"
          />
          <img
            src="/images/svg/performers/hide/hide_name.svg"
            alt="hide"
            class="w-32 h-auto"
          />
        </div>
      </div>

      <!-- 星空観望会 & プラネタリウムセクション -->
      {spaceServiceDetails.map((service) => (
        <SpaceServiceSection service={service} />
      ))}

      <!-- CTAセクション -->
      <SpaceCTASection
        message={`興味・疑問・ご質問などがあったら何でも
お気軽にお問合せください！`}
        buttonText="お問い合わせはこちら"
        buttonLink="/contact"
      />

      <FooterDivider />
    </div>
  </main>

  <Footer />
</Layout>
