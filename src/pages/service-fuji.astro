---
import Layout from '../layouts/Layout.astro';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import FooterDivider from '../components/overview/FooterDivider.astro';
import ServiceCategoryHeader from '../components/services/ServiceCategoryHeader.astro';
import ServiceComparisonTable from '../components/services/ServiceComparisonTable.astro';
import ServiceDetailCard from '../components/services/ServiceDetailCard.astro';
import RequestFlowStep from '../components/services/RequestFlowStep.astro';
import { serviceCategories, requestFlow, consultationTopics } from '../config/services';

const scienceCategory = serviceCategories.science;
---

<Layout
  title="サイエンス（科学分野）"
  description="科学実験ショー、科学実験教室、ワークショップなど、科学の楽しさを体験できるサービスをご提供します"
>
  <Header />

  <main class="flex-grow relative overflow-hidden">
    <!-- 背景装飾とスタイル -->
    <style>
      /* backGround.png を背景として使用 */
      body {
        background-image: url('/images/backGround.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
      }

      .star {
        position: absolute;
        background: white;
        clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
        opacity: 0.7;
      }

      .circle-decoration {
        position: absolute;
        background: white;
        border-radius: 50%;
        opacity: 0.3;
      }
    </style>

    <div class="max-w-4xl mx-auto px-4 py-12 relative z-10">
        <!-- サイエンス分野 -->
        <section id="science" class="mb-24">
          <ServiceCategoryHeader
            mainTitle={scienceCategory.mainTitle}
            subtitle={scienceCategory.subtitle}
            description={scienceCategory.description}
            subsectionTitle={scienceCategory.subsectionTitle}
            subsectionContent={scienceCategory.subsectionContent}
            characterIconUrl={scienceCategory.characterIconUrl}
          />

          <!-- Service Comparison Table -->
          <ServiceComparisonTable services={scienceCategory.services} />

          <!-- DetailTableButton -->
          <div class="flex justify-center mb-12">
            <a href="#science">
              <img
                src="/images/svg/Parts/DetailTableButton.svg"
                alt="詳しくはこちら"
                class="w-full max-w-4xl cursor-pointer hover:opacity-80 transition-opacity"
              />
            </a>
          </div>

          <!-- QA Banner -->
          <div class="flex justify-center mb-12">
            <a href="/contact">
              <img
                src="/images/svg/Parts/QA.svg"
                alt="お気軽にご相談ください"
                class="w-full max-w-4xl cursor-pointer hover:opacity-80 transition-opacity"
              />
            </a>
          </div>

          {scienceCategory.services.map((service, index) => (
            <ServiceDetailCard
              service={service}
              index={index}
              showServicePlans={true}
              services={scienceCategory.services}
            />
          ))}
        </section>

        <!-- ご依頼の流れセクション（後で移動） -->
        {/*
        <section id="request-flow" class="mb-24">
          <div class="text-center mb-16">
            <h2 class="section-title-news">ご依頼の流れ</h2>
            <div class="waveline-wrapper">
              <div class="waveline-container py-6">
                <!-- モバイル: 2つ -->
                <div class="flex sm:hidden">
                  <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto" />
                  <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto" />
                </div>
                <!-- タブレット: 3つ -->
                <div class="hidden sm:flex md:hidden">
                  <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto" />
                  <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto" />
                  <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto" />
                </div>
                <!-- デスクトップ: 5つ -->
                <div class="hidden md:flex">
                  <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto" />
                  <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto" />
                  <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto" />
                  <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto" />
                  <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto" />
                </div>
              </div>
            </div>
          </div>

          <!-- フローステップ -->
          <div class="max-w-4xl mx-auto">
            {requestFlow.map((step) => (
              <RequestFlowStep
                step={step.step}
                title={step.title}
                description={step.description}
              >
                {step.step === 1 && (
                  <div class="mt-6">
                    <h4 class="text-lg font-bold mb-4" style="color: #58778D;">打ち合わせ内容</h4>
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                      {consultationTopics.map((topic) => (
                        <div class="flex flex-col items-center text-center">
                          <img
                            src={topic.svg}
                            alt={topic.question}
                            class="w-32 h-16 mb-2"
                          />
                          <p class="text-xs leading-relaxed" style="color: #58778D;">
                            {topic.description}
                          </p>
                        </div>
                      ))}
                    </div>
                  </div>
                )}
              </RequestFlowStep>
            ))}
          </div>
        </section>
        */}


        <!-- 最終メッセージセクション（青い星） -->
        <section class="mb-24">
          <div class="flex items-start gap-6 max-w-4xl mx-auto">
            <img src="/images/svg/Parts/blue_star.svg" alt="サポート" class="w-56 h-52 flex-shrink-0" />

            <div class="flex-1 backdrop-blur-sm rounded-lg p-6 text-left">
              <h3 class="text-xl font-bold mb-3" style="color: #58778D;">実施後まで丁寧にサポート</h3>
              <p class="leading-relaxed" style="color: #58778D;">
                イベント実施後のアンケート集計や報告書作成、次回に向けた改善提案など、
                実施後のフォローアップも充実しています。長期的なパートナーとして、
                皆様の科学教育・普及活動をサポートいたします。
              </p>
            </div>
          </div>
        </section>

    <FooterDivider />
  </main>

  <Footer />
</Layout>
