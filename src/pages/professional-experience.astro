// ひでの活動経歴
const hideExperiences = [
  {
    year: '1995年 4月',
    eventName: '○○○○○大学○○学科',
    location: '(○○○○○○○大学○○)',
    description: '○○○○○○○○○○○○○○○○○○○○○○○○○○○○○○○○○○○○○○○○○○○○○○',
    imagePlaceholder: true
  },
  {
