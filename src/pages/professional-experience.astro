    eventName: 'プラネタリウム解説員デビュー',
    location: '(全国各地)',
    description: 'プラネタリウムでの星空解説と天文教育活動を開始。美しい宇宙の物語を多くの人に伝えている。',
    imagePlaceholder: true
  },
  {
    year: '2015年 1月',
    eventName: 'DONATI宇宙部門リーダー就任',
    location: '(沖縄県)',
    description: 'DONATIの宇宙部門のリーダーとして、より充実した宇宙教育プログラムの開発に従事。',
    imagePlaceholder: true
  }
];

// ひでの全国紙掲載
const hideMediaCoverage = [
  '星空新聞 2003年 2月 「プラネタリウムの魅力」',
  '○○○雑誌 2008年 11月 「宇宙教育の最前線」',
  '××××新聞 2016年 7月 「DONATI宇宙部門活動」'
];

// サービスカード用のリストアイテム
const servicesListItems = [
  { text: '依頼の流れ', href: '/services#request-flow' },
  { text: 'よくある質問', href: '/services#faq' }
];
---

<Layout title="活動経歴">
  <Header />

  <main class="flex-grow relative overflow-hidden">
    <div class="container mx-auto px-4 py-12 relative z-10">

      <!-- ページタイトルセクション -->
      <section class="text-left mb-16">
        <h1 class="section-title-news">活動経歴</h1>
        <div class="waveline-wrapper">
          <div class="flex justify-start">
            <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
            <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
            <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
          </div>
        </div>
      </section>

      <!-- ナビゲーションカード -->
      <section class="mb-16">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <ProfessionalExperienceFujiCard link="#fuji-section" />
          <ProfessionalExperienceHideCard link="#hide-section" />
          <ProfessionalExperienceServicesCard listItems={servicesListItems} link="/services" />
        </div>
      </section>

      <!-- フジの活動経歴セクション -->
      <section id="fuji-section" class="mb-24">
        <ProfessionalExperienceSection
          name="フジ"
          title="活動経歴 サイエンスパフォーマー フジ"
          characterIcon="/images/svg/Parts/fuji_pict.svg"
          experiences={fujiExperiences}
        />
        <MediaCoverageSection
          title="全国紙掲載"
          items={fujiMediaCoverage}
        />
      </section>

      <!-- ひでの活動経歴セクション -->
      <section id="hide-section" class="mb-24">
        <ProfessionalExperienceSection
          name="ひでゆき"
          title="活動経歴 虚空先生 ひでゆき"
          characterIcon="/images/svg/Parts/hide_pict.svg"
          experiences={hideExperiences}
        />
        <MediaCoverageSection
          title="全国紙掲載"
          items={hideMediaCoverage}
        />
      </section>

    </div>
  </main>

  <Footer />
</Layout>

<style>
  body {
    background-image: url('/images/backGround.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
  }

  html {
    scroll-behavior: smooth;
  }
</style>
