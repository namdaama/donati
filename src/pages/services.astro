---

<Layout title="サービス内容">
  <Header />
  
  <main class="flex-grow relative overflow-hidden">
    <!-- 背景装飾とスタイル -->
    <style>
      /* backGround.png を背景として使用 */
      body {
        background-image: url('/images/backGround.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
      }
      
      .star {
        position: absolute;
        background: white;
        clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
        opacity: 0.7;
      }
      
      .circle-decoration {
        position: absolute;
        background: white;
        border-radius: 50%;
        opacity: 0.3;
      }
      
      .waveline-wrapper {
        max-width: 1000px;
        margin: 0 auto;
        padding: 0 1rem;
      }
    </style>
        
    <!-- タイトルセクション -->
    <section class="text-center py-12 relative z-10">
      <div class="container mx-auto px-4">
        <!-- セクションタイトル -->
        <div class="text-left mb-12">
          <h2 class="section-title-news">
            サービス内容
          </h2>
        </div>
        <div class="waveline-wrapper">
          <div class="flex justify-center">
            <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
            <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
            <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
          </div>
        </div>
      </div>

    <div class="container mx-auto px-4 py-12 relative z-10">
      <!-- サービス分類セクション（OverViewセクション） -->
      <ServicesSection
        links={overviewLinks}
      />

        <!-- サイエンス分野 -->
        <section id="science" class="mb-24">
          <ServiceCategoryHeader
            icon={serviceCategories.science.icon}
            title={serviceCategories.science.title}
            subtitle={serviceCategories.science.subtitle}
            description={serviceCategories.science.description}
            characterIconUrl={serviceCategories.science.characterIconUrl}
          />

          {serviceCategories.science.services.map((service, index) => (
            <ServiceCard service={service} index={index} />
          ))}
        </section>
        
        <!-- スペース分野 -->
        <section id="space" class="mb-24">
          <ServiceCategoryHeader
            icon={serviceCategories.space.icon}
            title={serviceCategories.space.title}
            subtitle={serviceCategories.space.subtitle}
            description={serviceCategories.space.description}
            characterIconUrl={serviceCategories.space.characterIconUrl}
          />

          {serviceCategories.space.services.map((service, index) => (
            <ServiceCard service={service} index={index} />
          ))}
        </section>
        
        <!-- ご依頼の流れセクション -->
        <section class="mb-24">
          <div class="text-center mb-16">
            <h2 class="section-title-news">ご依頼の流れ</h2>
            <div class="waveline-wrapper">
              <div class="flex justify-center">
                <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
                <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
                <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
              </div>
            </div>
          </div>

          <!-- フローステップ -->
          <div class="max-w-4xl mx-auto">
            {requestFlow.map((step) => (
              <RequestFlowStep
                step={step.step}
                title={step.title}
                description={step.description}
              >
                {step.step === 1 && (
                  <div class="mt-6">
                    <h4 class="text-lg font-bold mb-4" style="color: #58778D;">打ち合わせ内容</h4>
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                      {consultationTopics.map((topic) => (
                        <div class="flex flex-col items-center text-center">
                          <img
                            src={topic.svg}
                            alt={topic.question}
                            class="w-32 h-16 mb-2"
                          />
                          <p class="text-xs leading-relaxed" style="color: #58778D;">
                            {topic.description}
                          </p>
                        </div>
                      ))}
                    </div>
                  </div>
                )}
              </RequestFlowStep>
            ))}
          </div>
        </section>

        <!-- 最終メッセージセクション（青い星） -->
        <section class="mb-24">
          <div class="flex items-start gap-6 max-w-4xl mx-auto">
            <img src="/images/svg/Parts/blue_star.svg" alt="サポート" class="w-56 h-52 flex-shrink-0" />

            <div class="flex-1 backdrop-blur-sm rounded-lg p-6 text-left">
              <h3 class="text-xl font-bold mb-3" style="color: #58778D;">実施後まで丁寧にサポート</h3>
              <p class="leading-relaxed" style="color: #58778D;">
                イベント実施後のアンケート集計や報告書作成、次回に向けた改善提案など、
                実施後のフォローアップも充実しています。長期的なパートナーとして、
                皆様の科学教育・普及活動をサポートいたします。
              </p>
            </div>
          </div>
        </section>
        
    <!-- 区切り線とコピーライト -->
    <div class="py-8">
      <hr class="border-t border-overview-dark-blue/20 mb-4" />
      <p class="text-center text-overview-dark-blue/60 text-sm">© サイエンス＆スペース ラボ DONATI</p>
    </div>

  </main>
  
  <Footer />
</Layout>

<script>
  // DOM読み込み完了後にイベントリスナーを設定
  document.addEventListener('DOMContentLoaded', function() {
    // すべてのFAQトグルボタンにクリックイベントを追加
    const faqToggles = document.querySelectorAll('.faq-toggle');
    
    faqToggles.forEach(button => {
      button.addEventListener('click', function(this: HTMLElement) {
        const answer = this.parentElement?.querySelector('.faq-answer') as HTMLElement;
        const icon = this.querySelector('.faq-icon') as HTMLElement;
        
        if (answer && icon) {
          if (answer.style.maxHeight === '0px' || answer.style.maxHeight === '') {
            // 開く - 滑らかなアニメーション
            answer.style.maxHeight = answer.scrollHeight + 'px';
            answer.style.opacity = '1';
            icon.style.transform = 'rotate(180deg)';
          } else {
            // 閉じる - 滑らかなアニメーション
            answer.style.maxHeight = '0px';
            answer.style.opacity = '0';
            icon.style.transform = 'rotate(0deg)';
          }
        }
      });
    });
    
    // 初期状態を設定
    const faqAnswers = document.querySelectorAll('.faq-answer');
    faqAnswers.forEach(answer => {
      const answerElement = answer as HTMLElement;
      answerElement.style.maxHeight = '0px';
      answerElement.style.opacity = '0';
    });
  });
</script>