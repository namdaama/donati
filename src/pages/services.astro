---
import Layout from '../layouts/Layout.astro';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import FooterDivider from '../components/overview/FooterDivider.astro';
import PageIntroduction from '../components/common/PageIntroduction.astro';
import ServiceCategoryHeader from '../components/services/ServiceCategoryHeader.astro';
import ServiceCard from '../components/cards/ServiceCard.astro';
import RequestFlowStep from '../components/services/RequestFlowStep.astro';
import ServicesSection from '../components/services/ServicesSection.astro';
import { serviceCategories, requestFlow, consultationTopics } from '../config/services';


// サービス情報は src/config/site.ts で一元管理
// - serviceCategories: サイエンス・スペース分野のサービス定義
// - requestFlow: ご依頼の流れ（6ステップ）
// - consultationTopics: 打ち合わせ内容（4項目）
// 上記をimportして使用（重複排除）

// 右列：リンク情報
const overviewLinks = [
  { textSvg: '/images/svg/Parts/text_Offer.svg', href: '#request-flow', altText: 'ご依頼の流れ' },
  { textSvg: '/images/svg/Parts/text_QA.svg', href: '#faq', altText: 'よくある質問' },
  { textSvg: '/images/svg/Parts/text_Carrer.svg', href: '/professional-experience', altText: '活動経歴' }
];
---

<Layout title="サービス内容">
  <Header />
  
  <main class="flex-grow relative overflow-hidden">
    <!-- 背景装飾とスタイル -->
    <style>
      /* backGround.png を背景として使用 */
      body {
        background-image: url('/images/backGround.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
      }
      
      .star {
        position: absolute;
        background: white;
        clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
        opacity: 0.7;
      }
      
      .circle-decoration {
        position: absolute;
        background: white;
        border-radius: 50%;
        opacity: 0.3;
      }
      
      .waveline-wrapper {
        max-width: 1000px;
        margin: 0 auto;
        padding: 0 1rem;
      }
    </style>
        
    <div class="container mx-auto px-4 py-12 relative z-10">
      <!-- タイトルセクション -->
      <PageIntroduction title="サービス内容" />
      <!-- サービス分類セクション（OverViewセクション） -->
      <ServicesSection
        links={overviewLinks}
      />

        <!-- サイエンス分野 -->
        <section id="science" class="mb-24">
          <ServiceCategoryHeader
            mainTitle={serviceCategories.science.mainTitle}
            subtitle={serviceCategories.science.subtitle}
            description={serviceCategories.science.description}
            subsectionTitle={serviceCategories.science.subsectionTitle}
            subsectionContent={serviceCategories.science.subsectionContent}
            characterIconUrl={serviceCategories.science.characterIconUrl}
          />

          {serviceCategories.science.services.map((service, index) => (
            <ServiceCard service={service} index={index} />
          ))}
        </section>
        
        <!-- スペース分野 -->
        <section id="space" class="mb-24">
          <ServiceCategoryHeader
            mainTitle={serviceCategories.space.mainTitle}
            subtitle={serviceCategories.space.subtitle}
            description={serviceCategories.space.description}
            subsectionTitle={serviceCategories.space.subsectionTitle}
            subsectionContent={serviceCategories.space.subsectionContent}
            characterIconUrl={serviceCategories.space.characterIconUrl}
          />

          {serviceCategories.space.services.map((service, index) => (
            <ServiceCard service={service} index={index} />
          ))}
        </section>
        
        <!-- ご依頼の流れセクション -->
        <section id="request-flow" class="mb-24">
          <PageIntroduction title="ご依頼の流れ" />

          <!-- フローステップ -->
          <div class="max-w-4xl mx-auto">
            {requestFlow.map((step) => (
              <RequestFlowStep
                step={step.step}
                title={step.title}
                description={step.description}
              >
                {step.step === 1 && (
                  <div class="mt-6">
                    <h4 class="text-lg font-bold mb-4" style="color: #58778D;">打ち合わせ内容</h4>
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                      {consultationTopics.map((topic) => (
                        <div class="flex flex-col items-center text-center">
                          <img
                            src={topic.svg}
                            alt={topic.question}
                            class="w-32 h-16 mb-2"
                          />
                          <p class="text-xs leading-relaxed" style="color: #58778D;">
                            {topic.description}
                          </p>
                        </div>
                      ))}
                    </div>
                  </div>
                )}
              </RequestFlowStep>
            ))}
          </div>
        </section>

        <!-- 最終メッセージセクション（青い星） -->
        <section class="mb-24">
          <div class="flex items-start gap-6 max-w-4xl mx-auto">
            <img src="/images/svg/Parts/blue_star.svg" alt="サポート" class="w-56 h-52 flex-shrink-0" />

            <div class="flex-1 backdrop-blur-sm rounded-lg p-6 text-left">
              <h3 class="text-xl font-bold mb-3" style="color: #58778D;">実施後まで丁寧にサポート</h3>
              <p class="leading-relaxed" style="color: #58778D;">
                イベント実施後のアンケート集計や報告書作成、次回に向けた改善提案など、
                実施後のフォローアップも充実しています。長期的なパートナーとして、
                皆様の科学教育・普及活動をサポートいたします。
              </p>
            </div>
          </div>
        </section>

    <FooterDivider />
  </main>
  
  <Footer />
</Layout>

<script>
  // DOM読み込み完了後にイベントリスナーを設定
  document.addEventListener('DOMContentLoaded', function() {
    // すべてのFAQトグルボタンにクリックイベントを追加
    const faqToggles = document.querySelectorAll('.faq-toggle');
    
    faqToggles.forEach(button => {
      button.addEventListener('click', function(this: HTMLElement) {
        const answer = this.parentElement?.querySelector('.faq-answer') as HTMLElement;
        const icon = this.querySelector('.faq-icon') as HTMLElement;
        
        if (answer && icon) {
          if (answer.style.maxHeight === '0px' || answer.style.maxHeight === '') {
            // 開く - 滑らかなアニメーション
            answer.style.maxHeight = answer.scrollHeight + 'px';
            answer.style.opacity = '1';
            icon.style.transform = 'rotate(180deg)';
          } else {
            // 閉じる - 滑らかなアニメーション
            answer.style.maxHeight = '0px';
            answer.style.opacity = '0';
            icon.style.transform = 'rotate(0deg)';
          }
        }
      });
    });
    
    // 初期状態を設定
    const faqAnswers = document.querySelectorAll('.faq-answer');
    faqAnswers.forEach(answer => {
      const answerElement = answer as HTMLElement;
      answerElement.style.maxHeight = '0px';
      answerElement.style.opacity = '0';
    });
  });
</script>