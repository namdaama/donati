---
import Layout from '../layouts/Layout.astro';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import FooterDivider from '../components/overview/FooterDivider.astro';
import PageIntroduction from '../components/common/PageIntroduction.astro';
import SectionHeading from '../components/common/SectionHeading.astro';
import SectionGrayHeading from '../components/professional-experience/SectionGrayHeading.astro';
import FAQItem from '../components/cards/FAQItem.astro';
import FAQNavCard from '../components/cards/FAQNavCard.astro';
import { faqData } from '../config/faq';
---

<Layout title="よくあるご質問">
  <Header />

  <main class="flex-grow">
    <section class="py-8 md:py-16">
      <div class="max-w-4xl mx-auto px-4">
        <!-- 1. ページタイトル -->
        <PageIntroduction title="よくあるご質問 (FAQ)" />

        <!-- ナビゲーションカード -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-12">
          <FAQNavCard titleSvg="/images/svg/Parts/text_Price.svg" titleAlt="料金" href="#pricing" />
          <FAQNavCard titleSvg="/images/svg/Parts/text_Question.svg" titleAlt="よくある質問（FAQ）" href="#faq" />
        </div>

        <!-- 2. 料金についてのご案内 -->
        <div id="pricing" class="p-6 md:p-8 mb-12">
          <h2 class="text-xl md:text-2xl font-bold mb-4 text-[#58778D]">{faqData.introSection.title}</h2>
          {faqData.introSection.content.map((paragraph) => (
            <p class="text-text-gray mb-3 leading-relaxed text-sm md:text-base">{paragraph}</p>
          ))}
        </div>

        <!-- 3. 料金の目安 -->
        <SectionHeading title="料金の目安" waveLineCount={5} titleMarginLeft="ml-4" />
        <div class="space-y-6 mb-16">
          {faqData.pricingItems.map((item) => (
            <div class="pricing-item">
              <SectionGrayHeading title={item.title} level="h3" />
              <div class="p-4 md:p-6">
                <p class="text-lg md:text-xl font-bold text-[#65B7EC] mb-2">{item.price}</p>
                {item.note && (
                  <p class="text-sm text-text-gray whitespace-pre-line leading-relaxed">{item.note}</p>
                )}
              </div>
            </div>
          ))}
        </div>

        <!-- 4. 費用についての補足 -->
        <SectionHeading title="費用についての補足" waveLineCount={5} titleMarginLeft="ml-4" />
        <div class="space-y-6 mb-16">
          {faqData.expenseItems.map((item) => (
            <div class="expense-item">
              <SectionGrayHeading title={item.title} level="h3" />
              <div class="p-4 md:p-6">
                <p class="text-sm md:text-base text-text-gray whitespace-pre-line leading-relaxed">{item.description}</p>
              </div>
            </div>
          ))}
        </div>

        <!-- 5. キャンセルポリシー -->
        <SectionHeading title="キャンセルポリシー" waveLineCount={5} titleMarginLeft="ml-4" />
        <div class="mb-16">
          <p class="text-sm md:text-base text-text-gray whitespace-pre-line leading-relaxed mb-8">
            {faqData.cancelPolicy.intro}
          </p>
          <div class="space-y-8">
            {faqData.cancelPolicy.sections.map((section) => (
              <div class="cancel-policy-section">
                <SectionGrayHeading title={section.title} level="h3" />
                <div class="p-4 md:p-6">
                  <p class="text-sm md:text-base text-text-gray whitespace-pre-line leading-relaxed mb-4">
                    {section.content}
                  </p>
                  {section.items.length > 0 && (
                    <ul class="space-y-2 mb-4">
                      {section.items.map((item) => (
                        <li class="text-sm md:text-base text-text-gray whitespace-pre-line leading-relaxed flex">
                          <span class="mr-1 flex-shrink-0">・</span>
                          <span>{item}</span>
                        </li>
                      ))}
                    </ul>
                  )}
                  {section.note && (
                    <p class="text-sm text-text-gray whitespace-pre-line leading-relaxed">
                      {section.note}
                    </p>
                  )}
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- 6. よくあるご質問 (FAQ) -->
        <div id="faq">
          <SectionHeading title="よくあるご質問 (FAQ)" waveLineCount={5} titleMarginLeft="ml-4" />
        </div>
        <div class="space-y-4 mb-16">
          {faqData.faqItems.map((item, index) => (
            <FAQItem question={item.question} answer={item.answer} index={index} />
          ))}
        </div>
      </div>
    </section>

    <FooterDivider />
  </main>

  <Footer />
</Layout>

<style>
  /* backGround.png を背景として使用 */
  body {
    background-image: url('/images/backGround.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
  }

  /* SectionHeading の幅を752pxに制限 */
  :global(.max-w-4xl > div.mb-12) {
    max-width: 752px;
  }
</style>
