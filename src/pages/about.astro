---
import Layout from '../layouts/Layout.astro';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import FooterDivider from '../components/overview/FooterDivider.astro';
import DonatiLogo from '../components/common/DonatiLogo.astro';
import StaffProfileCard from '../components/cards/StaffProfileCard.astro';
import SectionHeading from '../components/common/SectionHeading.astro';
import PageIntroduction from '../components/common/PageIntroduction.astro';
import { aboutPageContent } from '../config/site';

const { introduction, philosophy, staffMembers } = aboutPageContent;
---

<Layout title="DONATIとは">
  <Header />

  <main class="flex-grow relative overflow-hidden">
    <!-- ① DONATIとは セクション -->
    <section class="py-16">
      <div class="max-w-4xl mx-auto px-4">
        <!-- セクションタイトル -->
        <PageIntroduction title={introduction.title} />

        <!-- コンテンツグリッド（左：テキスト 3/5、右：ロゴ 2/5） -->
        <div class="grid grid-cols-1 md:grid-cols-5 gap-8 items-center">
          <!-- 左：テキストエリア（3/5幅） -->
          <div class="md:col-span-3">
            <!-- コンセプトメッセージ -->
            <h3 class="text-xl font-bold mb-8 leading-relaxed" style="color: #65B7EC; white-space: pre-line;">
              {introduction.concept}
            </h3>

            <!-- 説明文 -->
            <p class="leading-loose text-base" style="color: #58778D; white-space: pre-line;">
              {introduction.text}
            </p>
          </div>

          <!-- 右：DonatiLogo（2/5幅いっぱい） -->
          <div class="md:col-span-2 flex justify-center items-center w-full h-full">
            <DonatiLogo size="xlarge" />
          </div>
        </div>
      </div>
    </section>

    <!-- ② 大切にしていること セクション -->
    <section class="py-16">
      <div class="max-w-4xl mx-auto px-4">
        <!-- セクションタイトル -->
        <PageIntroduction title={philosophy.title} />

        <!-- コンテンツグリッド（左：テキスト 3/5、右：写真 2/5） -->
        <div class="grid grid-cols-1 md:grid-cols-5 gap-8 items-center">
          <!-- 左：テキストエリア（3/5幅） -->
          <div class="md:col-span-3">
            <!-- コンセプトメッセージ -->
            <h3 class="text-xl font-bold mb-8 leading-relaxed" style="color: #65B7EC; white-space: pre-line;">
              {philosophy.concept}
            </h3>

            <!-- 説明文 -->
            <p class="leading-loose text-base" style="color: #58778D; white-space: pre-line;">
              {philosophy.text}
            </p>
          </div>

          <!-- 右：星空写真（2/5幅いっぱい） -->
          <div class="md:col-span-2 flex items-center justify-center w-full h-full">
            <img
              src="/images/picture/About/StarrySky.png"
              alt="星空の写真"
              class="rounded-lg shadow-lg object-cover"
              style="width: 408px; height: 372px;"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- ③ メンバー紹介 セクション -->
    <section class="py-16">
      <div class="max-w-4xl mx-auto px-4">
        <!-- セクションタイトル -->
        <PageIntroduction title="メンバー紹介" />

        <!-- スタッフカードグリッド -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          {staffMembers.map((staff) => (
            <StaffProfileCard
              {...staff}
              showButtons={false}
            />
          ))}
        </div>
      </div>
    </section>

    <!-- 締めのメッセージ -->
    <section class="py-8">
      <div class="max-w-4xl mx-auto px-4">
        <div class="text-left mb-6">
          <p class="text-xl md:text-2xl font-bold leading-relaxed" style="color: #65B7EC; white-space: pre-line;">科学や星空を通して、
だれかの毎日を少し楽しくするきっかけをつくりたい。
そんな想いを大切に、活動しています。</p>
        </div>
      </div>
    </section>

    <!-- 事業情報 -->
    <section class="py-12">
      <div class="max-w-4xl mx-auto px-4">
        <div class="bg-gray-100 rounded-lg p-8 md:p-10">
          <h2 class="text-lg font-bold mb-6" style="color: #58778D;">【運営者について】</h2>
          <div class="text-xs md:text-sm text-gray-600 leading-relaxed space-y-3 font-bold">
            <p><strong>屋号：</strong>サイエンス＆スペースラボ DONATI</p>
            <p><strong>事業形態：</strong>個人事業主</p>
            <p><strong>代表者：</strong>加藤 絢</p>

            <p><strong>事業内容：</strong>科学実験ショー、科学実験教室、星空イベントの企画・実施</p>

            <p><strong>拠点：</strong>福井県吉田郡永平寺町（全国どこへでも出張いたします！）</p>

            <p>
              <strong>お問い合わせ：</strong>
              <a href="/contact" class="text-blue-600 hover:text-blue-800 underline">
                お問い合わせフォーム
              </a>よりご連絡ください
            </p>
          </div>
        </div>
      </div>
    </section>

    <FooterDivider />
  </main>

  <Footer />
</Layout>

<style>
  /* backGround.png を背景として使用 */
  body {
    background-image: url('/images/backGround.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
  }

</style>
