---
import Layout from '../layouts/Layout.astro';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import FooterDivider from '../components/overview/FooterDivider.astro';
import StaffProfileCard from '../components/cards/StaffProfileCard.astro';
import { aboutPageContent } from '../config/site';

const { philosophy, staffMembers } = aboutPageContent;
---

<Layout title="DONATIとは">
  <Header />

  <main class="flex-grow relative overflow-hidden">
    <!-- ① 大切にしていること セクション -->
    <section class="py-16">
      <div class="max-w-4xl mx-auto px-4">
        <!-- セクションタイトル -->
        <div class="mb-12">
          <h2 class="text-2xl font-bold mb-4" style="color: #58778D;">{philosophy.title}</h2>
          <div class="waveline-wrapper">
            <div class="w-full overflow-hidden flex justify-center">
              <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
              <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
              <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
            </div>
          </div>
        </div>

        <!-- 2カラムグリッド: 左テキスト + 右写真 -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
          <!-- 左: テキスト -->
          <div class="bg-white/70 backdrop-blur-sm rounded-2xl p-8 shadow-lg">
            <p class="text-gray-700 leading-loose text-base" style="white-space: pre-line;">
              {philosophy.text}
            </p>
          </div>

          <!-- 右: 星空写真プレースホルダー -->
          <div class="bg-white/70 backdrop-blur-sm rounded-2xl p-8 shadow-lg flex items-center justify-center min-h-[300px]">
            <div class="text-center text-gray-500">
              <p class="text-sm">ひでゆきさんの<br/>星空の写真<br/>どうですか？</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- ② メンバー紹介 セクション -->
    <section class="py-16">
      <div class="max-w-4xl mx-auto px-4">
        <!-- セクションタイトル -->
        <div class="mb-12">
          <h2 class="text-2xl font-bold mb-4" style="color: #58778D;">メンバー紹介</h2>
          <div class="waveline-wrapper">
            <div class="w-full overflow-hidden flex justify-center">
              <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
              <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
              <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
            </div>
          </div>
        </div>

        <!-- スタッフカードグリッド -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          {staffMembers.map((staff) => (
            <div class="bg-white/70 backdrop-blur-sm rounded-2xl p-6 shadow-lg">
              <StaffProfileCard
                {...staff}
                showButtons={false}
              />
            </div>
          ))}
        </div>
      </div>
    </section>

    <FooterDivider />
  </main>

  <Footer />
</Layout>

<style>
  /* backGround.png を背景として使用 */
  body {
    background-image: url('/images/backGround.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
  }

</style>
