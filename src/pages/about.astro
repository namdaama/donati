---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import DonatiLogo from '../components/DonatiLogo.astro';

// スタッフ情報
const staffMembers = [
  {
    name: 'フジ',
    nameImage: '/images/svg/Parts/fuji_name.svg',
    role: 'サイエンスパフォーマー',
    image: '/images/svg/Parts/fuji_pict.svg',
    description: 'ジョージ文字で、広島に生まれ、11歳でサックスを始める。音楽の高校、音楽の専門学校で音楽理論を学ぶ、20歳の時、バルーンアートに出会い、独学で習得。地域活動の音楽教育用にバンドメンバーとして教育現場、ソロパフォーマーとして、障害を中心に全国各地のイベントで活躍中',
    achievements: [
      'ライブパートナーエルパ',
      'イオンモール',
      '六合朝霧園',
      '学校、幼稚園、老人ホーム'
    ]
  },
  {
    name: 'ひでゆき',
    nameImage: '/images/svg/Parts/hide_name.svg',
    role: '星の写真家',
    image: '/images/svg/Parts/hide_pict.svg',
    description: 'ジョージ文字で、広島に生まれ、11歳でサックスを始める。音楽の高校、音楽の専門学校で音楽理論を学ぶ、20歳の時、バルーンアートに出会い、独学で習得。地域活動の音楽教育用にバンドメンバーとして教育現場、ソロパフォーマーとして、障害を中心に全国各地のイベントで活躍中',
    achievements: [
      'ライブパートナーエルパ',
      'イオンモール',
      '六合朝霧園',
      '学校、幼稚園、老人ホーム'
    ]
  }
];
---

<Layout title="私たちについて - DONATI">
  <Header />
  
  <main class="flex-grow relative overflow-hidden">
    <!-- 背景装飾 -->
    <style>
      /* backGround.png を背景として使用 */
      body {
        background-image: url('/images/backGround.png');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
      }
      
      .star {
        position: absolute;
        background: white;
        clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
        opacity: 0.7;
      }
      
      .circle-decoration {
        position: absolute;
        background: white;
        border-radius: 50%;
        opacity: 0.3;
      }
      
      .wave-decoration {
        background-image: repeating-linear-gradient(
          45deg,
          #FFD700,
          #FFD700 10px,
          transparent 10px,
          transparent 20px
        );
        height: 5px;
        width: 100%;
        margin: 2rem 0;
      }
      
      .yellow-circle {
        background: #FFD700;
        border-radius: 50%;
        width: 300px;
        height: 300px;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
      }
      
      .staff-card {
        background: white;
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
      }
    </style>
    
    <!-- 星の装飾 -->
    <div class="star" style="width: 30px; height: 30px; top: 10%; left: 10%;"></div>
    <div class="star" style="width: 20px; height: 20px; top: 20%; right: 15%;"></div>
    <div class="star" style="width: 25px; height: 25px; bottom: 30%; left: 5%;"></div>
    <div class="star" style="width: 35px; height: 35px; top: 60%; right: 10%;"></div>
    
    <!-- 円形装飾 -->
    <div class="circle-decoration" style="width: 100px; height: 100px; top: 5%; right: 20%;"></div>
    <div class="circle-decoration" style="width: 150px; height: 150px; bottom: 10%; left: -50px;"></div>
    <div class="circle-decoration" style="width: 80px; height: 80px; top: 40%; left: 10%;"></div>
    
    <div class="container mx-auto px-4 py-12 relative z-10">
      <!-- タイトルセクション -->
      <section class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4">
          DONATI（ドナチ）とは
        </h1>
        <div class="wave-decoration max-w-md mx-auto"></div>
      </section>
      
      <!-- 説明セクション -->
      <section class="mb-16">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
          <!-- 左側: テキストエリア -->
          <div class="space-y-6">
            <div class="bg-white/70 backdrop-blur-sm rounded-lg p-6">
              <h3 class="text-xl font-bold text-gray-800 mb-4">サイエンスとスペースの楽しさを</h3>
              <p class="text-gray-600 leading-relaxed">
                科学実験ショーや星空観望会で、小さいお子さんから大人の方まで、みんなで科学の面白さや宇宙の不思議を一緒に楽しんでいます！「なんでだろう？」って思ったことを大切にして、実際に手を動かして体験してもらうことで、「科学って楽しい！」って感じてもらえたら嬉しいです！
              </p>
            </div>

            <div class="bg-white/70 backdrop-blur-sm rounded-lg p-6">
              <h3 class="text-xl font-bold text-gray-800 mb-4">みんなで冒険しよう</h3>
              <p class="text-gray-600 leading-relaxed">
                科学って実はとっても身近で、すごく楽しいんですよ！それをみんなに伝えたくて、毎日ワクワクしながら活動しています。身の回りにある不思議を一緒に見つけたり、宇宙のすごさや綺麗さを感じたり、一緒に科学の冒険に出かけましょう！
              </p>
            </div>
          </div>

          <!-- 右側: DONATIロゴ -->
          <div class="flex justify-center items-center">
            <div class="yellow-circle p-8" style="width: 400px; height: 400px;">
              <DonatiLogo size="large" />
            </div>
          </div>
        </div>
        
        <div class="wave-decoration max-w-4xl mx-auto mt-8"></div>
      </section>

      <!-- スタッフ紹介セクション -->
      <section class="mb-16">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
            スタッフについて
          </h2>
          <div class="wave-decoration max-w-md mx-auto"></div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
          {staffMembers.map((member) => (
            <div class="staff-card">
              <!-- キャラクターイラスト -->
              <div class="flex justify-center mb-4">
                <img src={member.image} alt={member.name} class="w-32 h-auto" />
              </div>

              <!-- 名前（SVG） -->
              <div class="flex justify-center mb-2">
                <img src={member.nameImage} alt={member.name} class="h-12 w-auto" />
              </div>

              <!-- 役職 -->
              <p class="text-blue-600 font-semibold text-center text-sm mb-4">{member.role}</p>

              <!-- 説明文 -->
              <p class="text-gray-600 leading-relaxed text-sm mb-4">
                {member.description}
              </p>

              <!-- 活動履歴 -->
              <div class="mb-4">
                <h4 class="text-gray-800 font-semibold text-sm mb-2">活動履歴</h4>
                <ul class="list-disc list-inside text-gray-600 text-sm space-y-1">
                  {member.achievements.map((achievement) => (
                    <li>{achievement}</li>
                  ))}
                </ul>
              </div>

              <!-- ボタン -->
              <div class="flex gap-2 justify-center">
                <a href="/achievements" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition text-sm">
                  詳しい活動履歴
                </a>
                <a href="/services" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition text-sm">
                  サービス内容
                </a>
              </div>
            </div>
          ))}
        </div>
      </section>
    </div>
  </main>
  
  <Footer />
</Layout>