---
import Layout from '../layouts/Layout.astro';
import OverViewHeader from '../components/OverViewHeader.astro';
import OverViewHero from '../components/OverViewHero.astro';
import Footer from '../components/Footer.astro';

// お知らせデータ（4列グリッド用）
const newsItems = [
  {
    id: 1,
    thumbnail: '/images/news/event1.jpg',
    date: '2025/01 [土]',
    title: '1/18観察会～20:30時～',
    location: '駅前プラザ（ROOM A）',
    detail: '予約方法：Instagram DM',
    link: '/news/event1'
  },
  {
    id: 2,
    thumbnail: '/images/news/event2.jpg', 
    date: '2025/02 [日]',
    title: '2/15実験ショー～14:00時～',
    location: '市民会館（大ホール）',
    detail: '予約方法：Instagram DM',
    link: '/news/event2'
  },
  {
    id: 3,
    thumbnail: '/images/news/event3.jpg',
    date: '2025/02 [土]',
    title: '2/22ワークショップ～10:00時～',
    location: '科学館（実験室）',
    detail: '予約方法：Instagram DM',
    link: '/news/event3'
  },
  {
    id: 4,
    thumbnail: '/images/news/event4.jpg',
    date: '2025/03 [日]',
    title: '3/8星空観察～19:30時～',
    location: '山頂公園（観望台）',
    detail: '予約方法：Instagram DM',
    link: '/news/event4'
  }
];

// スタッフ情報
const staffMembers = [
  {
    name: 'スタッフA',
    role: 'サイエンスコミュニケーター',
    description: '実験ショーと星空解説が得意です'
  },
  {
    name: 'スタッフB', 
    role: '宇宙教育スペシャリスト',
    description: '宇宙の魅力をわかりやすくお伝えします'
  }
];

// お仕事情報
const services = [
  '実験ショー',
  'ワークショップ',
  '星空観察塾',
  '星空の先生',
  '出張授業',
  '科学イベント企画'
];
---

<Layout title="OverView - DONATI">
  <OverViewHeader />
  
  <main class="flex-grow">
    <!-- Hero Section -->
    <OverViewHero 
      title="DONATIとは？"
      subtitle="科学の楽しさと宇宙の神秘を、みんなで一緒に体験しませんか？子どもから大人まで、ワクワクする発見がここにあります。"
      ctaText="詳しくはコチラ"
      ctaLink="/about"
    />
    
    <!-- お知らせセクション -->
    <section class="py-16 md:py-24 bg-transparent">
      <div class="container mx-auto px-4">
        <!-- セクションタイトル -->
        <div class="text-center mb-12">
          <h2 class="text-4xl md:text-5xl font-bold text-overview-dark-blue mb-4">
            お知らせ
          </h2>
          <div class="w-24 h-1 bg-overview-yellow mx-auto"></div>
        </div>
        
        <!-- 4列グリッド -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {newsItems.map((item) => (
            <div class="bg-white/20 backdrop-blur-sm rounded-2xl shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden border-2 border-overview-yellow/30">
              <!-- サムネイル -->
              <div class="h-40 bg-overview-sky/20 flex items-center justify-center">
                <span class="text-4xl">📅</span>
              </div>
              
              <!-- コンテンツ -->
              <div class="p-4">
                <div class="text-sm font-bold text-overview-yellow bg-overview-dark-blue px-3 py-1 rounded-full inline-block mb-3">
                  {item.date}
                </div>
                <h3 class="font-bold text-overview-dark-blue mb-2 text-lg">
                  {item.title}
                </h3>
                <p class="text-sm text-gray-600 mb-2">
                  {item.location}
                </p>
                <p class="text-xs text-overview-sky font-medium">
                  {item.detail}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- 下部3列セクション -->
    <section class="py-16 md:py-24 bg-transparent">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          
          <!-- 1. スタッフについて -->
          <div class="bg-white/15 backdrop-blur-sm rounded-2xl shadow-lg p-8 border-t-4 border-overview-sky">
            <div class="text-center mb-6">
              <div class="w-16 h-16 bg-overview-sky rounded-full flex items-center justify-center mx-auto mb-4">
                <span class="text-2xl">👥</span>
              </div>
              <h3 class="text-2xl font-bold text-overview-dark-blue">
                スタッフについて
              </h3>
            </div>
            
            <div class="space-y-4 mb-6">
              {staffMembers.map((staff) => (
                <div class="bg-overview-sky/10 p-4 rounded-lg">
                  <h4 class="font-bold text-overview-dark-blue mb-1">
                    {staff.name}
                  </h4>
                  <p class="text-sm text-overview-sky font-medium mb-2">
                    {staff.role}
                  </p>
                  <p class="text-sm text-gray-600">
                    {staff.description}
                  </p>
                </div>
              ))}
            </div>
            
            <div class="text-center">
              <a href="/staff" class="inline-block bg-overview-sky hover:bg-overview-sky/90 text-white font-bold py-3 px-6 rounded-full transition-colors duration-300">
                詳しくはコチラ
              </a>
            </div>
          </div>
          
          <!-- 2. お仕事のこと -->
          <div class="bg-white/15 backdrop-blur-sm rounded-2xl shadow-lg p-8 border-t-4 border-overview-yellow">
            <div class="text-center mb-6">
              <div class="w-16 h-16 bg-overview-yellow rounded-full flex items-center justify-center mx-auto mb-4">
                <span class="text-2xl">⚗️</span>
              </div>
              <h3 class="text-2xl font-bold text-overview-dark-blue">
                お仕事のこと
              </h3>
            </div>
            
            <ul class="space-y-3 mb-6">
              {services.map((service) => (
                <li class="flex items-center">
                  <span class="w-2 h-2 bg-overview-yellow rounded-full mr-3"></span>
                  <span class="text-overview-dark-blue font-medium">{service}</span>
                </li>
              ))}
            </ul>
            
            <div class="text-center">
              <a href="/services" class="inline-block bg-overview-yellow hover:bg-overview-yellow/90 text-overview-dark-blue font-bold py-3 px-6 rounded-full transition-colors duration-300">
                詳しくはコチラ
              </a>
            </div>
          </div>
          
          <!-- 3. お問い合わせ -->
          <div class="bg-white/15 backdrop-blur-sm rounded-2xl shadow-lg p-8 border-t-4 border-overview-dark-blue">
            <div class="text-center mb-6">
              <div class="w-16 h-16 bg-overview-dark-blue rounded-full flex items-center justify-center mx-auto mb-4">
                <span class="text-2xl text-white">✉️</span>
              </div>
              <h3 class="text-2xl font-bold text-overview-dark-blue">
                お問い合わせ
              </h3>
            </div>
            
            <div class="space-y-4 mb-6">
              <div class="text-center">
                <p class="text-sm text-gray-600 mb-2">電話番号</p>
                <p class="text-xl font-bold text-overview-dark-blue">
                  000-0000-0000
                </p>
              </div>
              
              <div class="text-center">
                <p class="text-sm text-gray-600 mb-2">営業時間</p>
                <p class="text-sm text-overview-dark-blue">
                  平日・土日 9:00～18:00<br>
                  年中無休（年末年始除く）
                </p>
              </div>
              
              <div class="bg-overview-sky/10 p-4 rounded-lg text-center">
                <p class="text-sm text-overview-dark-blue font-medium">
                  「組み合わせるのも楽しさに任せます！」
                </p>
              </div>
            </div>
            
            <div class="text-center">
              <a href="/contact" class="inline-block bg-overview-dark-blue hover:bg-overview-dark-blue/90 text-white font-bold py-3 px-6 rounded-full transition-colors duration-300">
                お問い合せはコチラ
              </a>
            </div>
          </div>
          
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  /* 丸みを帯びた親しみやすいフォント調整 */
  body {
    font-family: 'Noto Sans JP', 'Hiragino Kaku Gothic ProN', 'Hiragino Sans', sans-serif;
  }
  
  /* backGround.png を背景として使用 */
  body {
    background-image: url('/images/backGround.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
  }
  
  /* 背景画像の上に軽いオーバーレイを追加 */
  body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, rgba(135, 206, 235, 0.1) 0%, rgba(255, 215, 0, 0.1) 100%);
    pointer-events: none;
    z-index: -1;
  }
</style>