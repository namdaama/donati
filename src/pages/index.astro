// サービス情報（新構造）
const serviceCategories = {
  science: {
    title: 'サイエンス（科学分野）',
    icon: '⚗️',
    services: [
      { name: 'サイエンスショー', description: '科学実験の楽しさを体験' },
      { name: '科学実験教室（探求学習）', description: '子どもの科学的思考を育む' },
      { name: 'ワークショップ', description: '参加型の科学体験プログラム' }
    ]
  },
  space: {
    title: 'スペース（宇宙分野）',
    icon: '🌟',
    services: [
      { name: '星空観望会／プラネタリウム解説／星空イベント', description: '宇宙の神秘を観察・解説' },
      { name: '講演・大学講義（宇宙・天文教育）', description: '専門的な宇宙知識をお伝え' },
      { name: '星空風景写真の提供・出版利用', description: '美しい星空写真の提供' }
    ]
  }
};

// ご依頼の流れ
const requestFlow = [
  { step: 1, title: 'お問い合わせ', description: 'まずはお気軽にご相談ください' },
