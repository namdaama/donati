---
import Layout from '../layouts/Layout.astro';
import Header from '../components/common/Header.astro';
import Carousel from '../components/common/Carousel.astro';
import Footer from '../components/common/Footer.astro';
import FooterDivider from '../components/overview/FooterDivider.astro';
import OverViewSection from '../components/overview/OverViewSection.astro';
import { heroCarouselData } from '../config/site';

// Instagram Graph APIからお知らせを取得
import type { AnnouncementPost } from '../types/instagram';

let announcements: AnnouncementPost[] = [];
const posts = await fetchInstagramPosts();

if (instagramConfig.enableHashtagFilter) {
  announcements = filterAnnouncementPosts(posts, instagramConfig.announcementHashtag);
} else {
  // ハッシュタグフィルター無効の場合、すべての投稿を表示
  announcements = posts.map(post => ({
    ...post,
    category: 'news' as const,
    eventDate: undefined,
    location: undefined
  }));
}

// 最新4投稿のみ表示
announcements = announcements.slice(0, instagramConfig.maxDisplayPosts);

// スタッフ情報（OverView.jpgデザインに合わせて更新）
const staffMembers = [
  {
    name: 'フジ',
    role: 'サイエンスコミュニケーター',
    pictSvg: '/images/svg/Parts/fuji_pict.svg',
    nameSvg: '/images/svg/Parts/fuji_name.svg'
  },
  {
    name: 'ひでゆき',
    role: '星空案内人',
    pictSvg: '/images/svg/Parts/hide_pict.svg',
    nameSvg: '/images/svg/Parts/hide_name.svg'
  }
];

// サービス内容（OverView.jpgデザインに合わせて更新）
const services = [
  'わくわく実験教室',
  'ワークショップ',
  '星空イベント',
  '星空の写真　など'
];

// OverViewセクション用のリンク情報
const overviewLinks = [
  { textSvg: '/images/svg/Parts/text_Offer.svg', href: '/services', altText: '依頼の流れ' },
  { textSvg: '/images/svg/Parts/text_QA.svg', href: '/services#faq', altText: 'よくある質問' },
  { textSvg: '/images/svg/Parts/text_Carrer.svg', href: '/professional-experience', altText: '活動経歴' }
];
---

<Layout title="OverView - DONATI">
  <Header />
  
  <main class="flex-grow">
    <!-- Hero Carousel Section -->
    <div class="hero-carousel-wrapper">
      <Carousel slides={heroCarouselData} />
    </div>

    <!-- お知らせセクション -->
    <section class="py-16 md:py-24 bg-transparent">
      <div class="container mx-auto px-4">
        <!-- セクションタイトル -->
        <div class="text-left mb-12">
          <h2 class="section-title-news">
            お知らせ
          </h2>
        </div>
      </div>

      <!-- ウェーブライン（containerの外） -->
      <div class="waveline-wrapper">
        <div class="flex justify-center">
          <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
          <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
          <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
        </div>
      </div>

      <div class="container mx-auto px-4">
        
        <!-- 4列グリッド -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {announcements.length > 0 ? (
            announcements.map((announcement) => (
              <AnnouncementCard announcement={announcement} />
            ))
          ) : (
            <div class="col-span-4 text-center py-12">
              <p class="text-overview-dark-blue text-lg">
                お知らせを読み込み中です...
              </p>
              <p class="text-gray-600 text-sm mt-2">
                Instagramの投稿が表示されます
              </p>
            </div>
          )}
        </div>
      </div>
    </section>

    <!-- 波線装飾（複数並べて中央寄せ） -->
    <div class="waveline-wrapper">
      <div class="overflow-hidden py-4 flex justify-center">
        <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
        <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
        <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
        <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
        <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
      </div>
    </div>

    <OverViewSection {staffMembers} {services} links={overviewLinks} />

    <!-- CTAバナー（QA画像） -->
    <section class="py-12 md:py-16">
      <div class="container mx-auto px-4">
        <a href="/contact" class="block hover:opacity-90 transition-opacity duration-300">
          <img src="/images/svg/Parts/QA.svg" alt="お問い合わせ - 時間・予算・内容、ご相談OKです！" class="w-full max-w-4xl mx-auto" />
        </a>
      </div>
    </section>

    <FooterDivider />
  </main>

  <Footer />
</Layout>

<style>
  /* 丸みを帯びた親しみやすいフォント調整 */
  body {
    font-family: 'Noto Sans JP', 'Hiragino Kaku Gothic ProN', 'Hiragino Sans', sans-serif;
  }
  
  /* backGround.png を背景として使用 */
  body {
    background-image: url('/images/backGround.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
  }
  
  /* 背景画像の上に軽いオーバーレイを追加 */
  body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, rgba(135, 206, 235, 0.1) 0%, rgba(255, 215, 0, 0.1) 100%);
    pointer-events: none;
    z-index: -1;
  }

  /* Heroカルーセル専用スタイル */
  .hero-carousel-wrapper {
    margin-top: 0;
    margin-bottom: 2rem;
    max-width: 1000px;
    margin-left: auto;
    margin-right: auto;
    padding: 0 1rem;
  }

  .hero-carousel-wrapper .carousel-section {
    padding: 0;
    width: 100%;
  }

  .hero-carousel-wrapper .container {
    max-width: 100% !important;
    padding: 0 !important;
    margin: 0 !important;
    width: 100% !important;
  }

  .hero-carousel-wrapper .carousel-wrapper {
    border-radius: 0;
    margin: 0;
    width: 100%;
    box-shadow: none;
  }

  /* レスポンシブ画像高さ */
  .hero-carousel-wrapper .carousel-slide img {
    height: 400px;
    object-fit: cover;
  }

  @media (min-width: 768px) {
    .hero-carousel-wrapper .carousel-slide img {
      height: 500px;
    }
  }

  @media (min-width: 1024px) {
    .hero-carousel-wrapper .carousel-slide img {
      height: 600px;
    }
  }

  /* カルーセルコンテンツを非表示 */
  .hero-carousel-wrapper .carousel-content {
    display: none;
  }

  /* アクティブドットの配色調整 */
  .hero-carousel-wrapper .dot.active {
    background: #f4a261;
  }

  /* ウェーブライン幅調整 */
  .waveline-wrapper {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* ホバーエフェクト */
  .hero-carousel-wrapper .carousel-slide {
    cursor: pointer;
  }
</style>