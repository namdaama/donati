---
interface Props {
  message: string;
  buttonText?: string;
  buttonLink?: string;
}

const {
  message,
  buttonText = 'お問い合わせはこちら',
  buttonLink = '/contact'
} = Astro.props;
---

<section class="my-16 md:my-24">
  <div class="bg-[#FFE84C] rounded-lg py-12 px-6 md:px-12">
    <div class="max-w-3xl mx-auto text-center">
      <!-- メールアイコン -->
      <div class="flex justify-center mb-6">
        <svg
          class="w-20 h-20 md:w-24 md:h-24"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <rect
            x="2"
            y="5"
            width="20"
            height="14"
            rx="2"
            stroke="#58778D"
            stroke-width="2"
            fill="white"
          />
          <path
            d="M2 7L12 13L22 7"
            stroke="#58778D"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          />
        </svg>
      </div>

      <!-- メッセージ -->
      <p
        class="text-lg md:text-2xl font-bold mb-8 leading-relaxed whitespace-pre-line"
        style="color: #58778D;"
      >
        {message}
      </p>

      <!-- ボタン -->
      <a
        href={buttonLink}
        class="inline-block bg-[#65B7EC] hover:bg-[#5AA8DC] text-white font-bold text-lg md:text-xl py-4 px-12 rounded-full transition-colors duration-300 shadow-lg hover:shadow-xl"
      >
        {buttonText}
      </a>
    </div>
  </div>
</section>
