---
interface Props {
  link?: string;               // リンク先（デフォルト: '#space'）
}

const { link = '#space' } = Astro.props;

// 固定値（ハードコーディング）
const titleSvg = '/images/svg/Parts/text_space.svg';
const characterIcon = '/images/svg/Parts/hide_pict.svg';
const nameIcon = '/images/svg/Parts/hide_name.svg';
---

<div class="bg-white/95 rounded-2xl shadow-lg p-6 overflow-hidden flex flex-col">
  <!-- タイトルセクション -->
  <div class="text-center mb-4">
    <img src={titleSvg} alt="スペース（宇宙分野）" class="h-7 mx-auto mb-2" />
    <div class="flex justify-center gap-1">
      <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-3" />
      <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-3" />
      <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-3" />
    </div>
  </div>

  <!-- キャラクター + 名前 -->
  <div class="flex justify-center items-center gap-6 mb-4 flex-grow">
    <img src={characterIcon} alt="ひでゆき" class="w-24 h-24" />
    <img src={nameIcon} alt="星座写真家 ひでゆき" class="h-12" />
  </div>

  <!-- 詳細リンク -->
  <div class="text-center mt-auto">
    <a href={link} class="inline-block">
      <img src="/images/svg/Parts/icon_detailHere.svg" alt="詳しくはコチラ" class="h-10 md:h-12 hover:scale-105 transition-transform duration-300" />
    </a>
  </div>
</div>
