---
import RecommendedScenes from './RecommendedScenes.astro';

interface Props {
  id?: string;
  title: string;
  photoUrl: string;
  mainCatch: string;
  description: string;
  recommendedScenesData: {
    overviewDescription: string;
    scenes: Array<{
      title: string;
      description: string;
    }>;
  };
}

const { id, title, photoUrl, mainCatch, description, recommendedScenesData } = Astro.props;
---

<div class="service-description" id={id}>
  <!-- セクションヘッダー -->
  <div class="section-header">
    <h2 class="service-title">{title}</h2>
    <div class="waveline-decoration">
      <!-- 波線SVGを5つ並べる（デスクトップ表示用） -->
      <img src="/images/svg/Parts/waveLine.svg" alt="" class="waveline" />
      <img src="/images/svg/Parts/waveLine.svg" alt="" class="waveline" />
      <img src="/images/svg/Parts/waveLine.svg" alt="" class="waveline" />
      <img src="/images/svg/Parts/waveLine.svg" alt="" class="waveline" />
      <img src="/images/svg/Parts/waveLine.svg" alt="" class="waveline" />
    </div>
  </div>

  <!-- メインコンテンツ（2列グリッド） -->
  <div class="main-content">
    <!-- 左: 写真エリア -->
    <div class="photo-area">
      <img src={photoUrl} alt={title} class="service-photo" />
    </div>

    <!-- 右: 説明文エリア -->
    <div class="description-area">
      <p class="main-catch">{mainCatch}</p>
      <p class="detailed-description">{description}</p>
    </div>
  </div>

  <!-- RecommendedScenesコンポーネント統合 -->
  <RecommendedScenes
    overviewDescription={recommendedScenesData.overviewDescription}
    scenes={recommendedScenesData.scenes}
  />
</div>

<style>
  /* コンテナ */
  .service-description {
    max-width: 1024px;
    margin: 0 auto 3rem;
    padding: 0 1rem;
  }

  /* セクションヘッダー */
  .section-header {
    margin-bottom: 2rem;
  }

  .service-title {
    font-size: 1.75rem;
    font-weight: bold;
    color: #58778d;
    text-align: left;
    margin: 0 0 1rem 0;
  }

  .waveline-decoration {
    display: flex;
    overflow: hidden;
    max-width: 100%;
  }

  .waveline {
    height: 16px;
    width: auto;
    flex-shrink: 0;
  }

  /* メインコンテンツ（2列グリッド） */
  .main-content {
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .photo-area {
    width: 100%;
  }

  .service-photo {
    width: 100%;
    max-width: 300px;
    height: auto;
    aspect-ratio: 3 / 2;
    border-radius: 8px;
    object-fit: cover;
  }

  .description-area {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .main-catch {
    font-size: 1.125rem;
    font-weight: bold;
    color: #65b7ec;
    line-height: 1.75;
    text-align: left;
    margin: 0;
    white-space: pre-line;
  }

  .detailed-description {
    font-size: 1rem;
    color: #58778d;
    line-height: 1.8;
    text-align: left;
    margin: 0;
  }

  /* レスポンシブ対応 */
  @media (max-width: 768px) {
    .service-title {
      font-size: 1.5rem;
    }

    .main-content {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .service-photo {
      max-width: 100%;
    }

    .main-catch {
      font-size: 1rem;
    }

    .detailed-description {
      font-size: 0.938rem;
    }
  }

  @media (max-width: 640px) {
    .service-title {
      font-size: 1.25rem;
    }

    .main-content {
      gap: 1rem;
    }

    .main-catch {
      font-size: 0.938rem;
    }

    .detailed-description {
      font-size: 0.875rem;
    }
  }
</style>
