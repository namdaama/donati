---
import type { ServiceItem } from '../../config/types';

interface Props {
  services: ServiceItem[];
}

const { services } = Astro.props;

// Row labels configuration
const rowLabels = [
  { key: 'overview', label: '概要' },
  { key: 'effect', label: '期待できる効果' },
  { key: 'suitableEvents', label: '向いている\nイベント' },
  { key: 'achievements', label: 'これまでの\n実績実例' },
  { key: 'recommendedFor', label: 'こんな方に\nおすすめ！' },
  { key: 'scale', label: '規模・対象' },
  { key: 'duration', label: '時間目安' },
  { key: 'requiredSpace', label: '必要スペース' }
];

// Format service titles with line breaks
const formatServiceTitle = (title: string) => {
  const titleMap: { [key: string]: string } = {
    'サイエンスパフォーマンスショー': 'サイエンス\nパフォーマンスショー',
    'わくわく科学実験室': 'わくわく\n科学実験室',
    'ワークショップ': 'ワーク\nショップ'
  };
  return titleMap[title] || title;
};
---

<style>
  .comparison-table-wrapper {
    max-width: 100%;
    overflow-x: auto;
    margin-bottom: 2rem;
  }

  .comparison-table {
    width: 100%;
    border-collapse: collapse;
    background-color: transparent;
    box-shadow: none;
  }

  .table-title-cell {
    border-bottom: 3px solid rgba(255, 255, 255, 0.2);
  }

  /* Header row (service names) */
  .table-header-cell {
    background-color: #FFEF00;
    padding: 1rem 0.75rem;
    text-align: center;
    font-weight: bold;
    color: #58778D;
    border-bottom: 3px solid rgba(255, 255, 255, 0.2);
    font-size: 0.95rem;
    line-height: 1.4;
    word-wrap: break-word;
    width: 33.33%;
    white-space: normal;
    word-break: break-word;
  }

  .row-label-header {
    background-color: #FFEF00;
    padding: 1rem 0.75rem;
    text-align: center;
    font-weight: bold;
    color: #58778D;
    border-bottom: 3px solid rgba(255, 255, 255, 0.2);
  }

  /* Data rows */
  .row-label {
    background-color: #65B7EC;
    padding: 1rem 0.75rem;
    text-align: center;
    font-weight: bold;
    color: white;
    border-bottom: 3px solid rgba(255, 255, 255, 0.2);
    width: 150px;
    min-width: 150px;
    white-space: normal;
    word-wrap: break-word;
    font-size: 0.875rem;
  }

  .data-cell {
    background-color: transparent;
    padding: 1rem 0.75rem;
    text-align: left;
    color: #58778D;
    border-bottom: 3px solid rgba(255, 255, 255, 0.2);
    font-size: 0.75rem;
    line-height: 1.5;
    width: 33.33%;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .comparison-table-wrapper {
      overflow-x: auto;
    }

    .comparison-table {
      min-width: 600px;
    }

    .table-header-cell,
    .data-cell {
      padding: 0.75rem 0.5rem;
      font-size: 0.85rem;
    }

    .row-label {
      width: 100px;
      min-width: 100px;
      padding: 0.75rem 0.5rem;
    }

    .table-title {
      padding: 0.75rem;
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .comparison-table {
      min-width: 500px;
    }

    .table-header-cell {
      padding: 0.5rem 0.4rem;
      font-size: 0.8rem;
    }

    .row-label {
      padding: 0.5rem 0.4rem;
      width: 80px;
      min-width: 80px;
      font-size: 0.8rem;
    }

    .data-cell {
      padding: 0.5rem 0.4rem;
      font-size: 0.8rem;
      line-height: 1.3;
    }

    .table-title {
      padding: 0.5rem;
      font-size: 0.9rem;
    }
  }
</style>

<div class="max-w-4xl mx-auto px-4 mb-12">
  <div class="comparison-table-wrapper">
    <table class="comparison-table">
      <!-- Header row -->
      <thead>
        <tr>
          <th class="row-label-header">3つのプラン<br />簡易比較表</th>
          {services.map((service) => {
            const titleParts = formatServiceTitle(service.title).split('\n');
            return (
              <th class="table-header-cell">
                {titleParts.map((part, partIndex) => (
                  <>
                    {part}
                    {partIndex < titleParts.length - 1 && <br />}
                  </>
                ))}
              </th>
            );
          })}
        </tr>
      </thead>
      <!-- Data rows -->
      <tbody>
        {rowLabels.map((row) => {
          const labelLines = row.label.split('\n');
          return (
            <tr>
              <td class="row-label">
                {labelLines.map((line, lineIndex) => (
                  <>
                    {line}
                    {lineIndex < labelLines.length - 1 && <br />}
                  </>
                ))}
              </td>
              {services.map((service) => {
                const content = service.detailTable ? service.detailTable[row.key as keyof typeof service.detailTable] : '';
                const contentStr = typeof content === 'string' ? content : '';
                const lines = contentStr.split('\n');
                return (
                  <td class="data-cell">
                    {lines.map((line: string, lineIndex: number) => (
                      <>
                        {line}
                        {lineIndex < lines.length - 1 && <br />}
                      </>
                    ))}
                  </td>
                );
              })}
            </tr>
          );
        })}
      </tbody>
    </table>
  </div>
</div>
