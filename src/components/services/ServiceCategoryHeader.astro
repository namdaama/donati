---
interface Props {
  mainTitle: string;
  subtitle: string;
  description: string;
  subsectionTitle: string;
  subsectionContent: string[];
  characterIconUrl: string;
  // 後方互換性用のオプションプロップ
  icon?: string;
  title?: string;
}

const {
  mainTitle,
  subtitle,
  description,
  subsectionTitle,
  subsectionContent,
  characterIconUrl,
  icon,
  title
} = Astro.props;
---

<div class="service-category-header">
  <!-- セクション1: メインタイトル -->
  <section class="main-title-section">
    <h1 class="main-title">{mainTitle}</h1>
    <div class="waveline-wrapper">
      <img
        src="/images/svg/Parts/waveLine_752px.svg"
        alt=""
        class="waveline-large"
      />
    </div>
  </section>

  <!-- セクション2: サブタイトルと説明文 -->
  <section class="subtitle-section">
    <h2 class="subtitle">{subtitle}</h2>
    <p class="description">{description}</p>
  </section>

  <!-- セクション3: サブセクション（キャラクター付き） -->
  <section class="subsection-with-character">
    <!-- サブセクションタイトル -->
    <h3 class="subsection-title">{subsectionTitle}</h3>

    <!-- ウェーブライン -->
    <div class="waveline-wrapper">
      <img
        src="/images/svg/Parts/waveLine_752px.svg"
        alt=""
        class="waveline-large"
      />
    </div>

    <!-- コンテンツグリッド: 左テキスト、右キャラクター -->
    <div class="content-grid">
      <!-- 左: 複数段落テキスト -->
      <div class="text-content">
        {subsectionContent.map((paragraph) => (
          <p class="paragraph">{paragraph}</p>
        ))}
      </div>

      <!-- 右: キャラクターアイコン -->
      <div class="character-icon-wrapper">
        <img
          src={characterIconUrl}
          alt={mainTitle}
          class="character-icon"
        />
      </div>
    </div>
  </section>
</div>

<style>
  /* コンテナ */
  .service-category-header {
    max-width: 1024px;
    margin: 0 auto;
    padding: 0 1rem;
    margin-bottom: 4rem;
  }

  /* セクション1: メインタイトル */
  .main-title-section {
    text-align: left;
    margin-bottom: 3rem;
  }

  .main-title {
    font-size: 2.5rem;
    font-weight: bold;
    color: #58778d;
    margin-bottom: 1.5rem;
    margin-top: 0;
  }

  /* セクション2: サブタイトルと説明文 */
  .subtitle-section {
    text-align: left;
    margin-bottom: 3rem;
  }

  .subtitle {
    font-size: 1.5rem;
    font-weight: bold;
    color: #58778d;
    margin-bottom: 1rem;
    margin-top: 0;
  }

  .description {
    font-size: 1.125rem;
    color: #58778d;
    line-height: 1.75;
    margin: 0;
  }

  /* セクション3: サブセクション */
  .subsection-with-character {
    margin-bottom: 2rem;
  }

  .subsection-title {
    font-size: 1.375rem;
    font-weight: bold;
    color: #58778d;
    text-align: left;
    margin-bottom: 1.5rem;
    margin-top: 0;
  }

  /* ウェーブライン */
  .waveline-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 2rem;
    overflow: hidden;
    max-width: 100%;
  }

  .waveline-large {
    max-width: 100%;
    height: auto;
    width: 752px;
  }

  /* コンテンツグリッド: テキスト左、キャラクター右 */
  .content-grid {
    display: grid;
    grid-template-columns: 1fr 200px;
    gap: 2rem;
    align-items: start;
  }

  .text-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .paragraph {
    font-size: 1rem;
    color: #58778d;
    line-height: 1.8;
    margin: 0;
  }

  .character-icon-wrapper {
    display: flex;
    justify-content: center;
    align-items: flex-start;
  }

  .character-icon {
    width: 180px;
    height: 180px;
    object-fit: contain;
  }

  /* レスポンシブデザイン */
  @media (max-width: 768px) {
    .main-title {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1.25rem;
    }

    .description {
      font-size: 1rem;
    }

    .subsection-title {
      font-size: 1.125rem;
    }

    .waveline-large {
      width: 100%;
      max-width: 500px;
    }

    /* モバイルではスタック：テキスト上、キャラ下 */
    .content-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .character-icon-wrapper {
      justify-content: center;
    }

    .character-icon {
      width: 150px;
      height: 150px;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    /* タブレット調整 */
    .content-grid {
      grid-template-columns: 1fr 160px;
      gap: 1.5rem;
    }

    .character-icon {
      width: 150px;
      height: 150px;
    }
  }
</style>
