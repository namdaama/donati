---
interface Experience {
  year: string;
  eventName: string;
  location: string;
  description: string;
  imagePlaceholder?: boolean;
}

interface Props {
  name: string;
  title: string;
  characterIcon: string;
  experiences: Experience[];
}

const { name, title, characterIcon, experiences } = Astro.props;
---

<!-- セクションヘッダー: キャラクターアイコン + タイトル + waveLine -->
<div class="mb-16 max-w-4xl mx-auto flex items-start gap-6">
  <!-- 左側: キャラクターアイコン -->
  <img src={characterIcon} alt={name} class="w-32 h-32 flex-shrink-0" />

  <!-- 右側: テキスト + ウェーブライン -->
  <div class="flex-1">
    <h2 class="section-title-news">{title}</h2>
    <div class="waveline-wrapper mt-3">
      <div class="flex justify-start">
        <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
        <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
        <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
      </div>
    </div>
  </div>
</div>

<!-- 経歴アイテムリスト -->
<div class="max-w-4xl mx-auto">
  {experiences.map((experience, index) => (
    <div class={`${index !== 0 ? 'mt-12' : ''}`}>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-stretch">
        <!-- 左側: 画像プレースホルダー -->
        <div class="bg-white/50 backdrop-blur-sm rounded-lg min-h-48 flex items-center justify-center">
          {experience.imagePlaceholder ? (
            <div class="w-full h-48 bg-gray-400 rounded-lg"></div>
          ) : (
            <img src={experience.imagePlaceholder ? '' : ''} alt={experience.eventName} class="w-full h-48 object-cover rounded-lg" />
          )}
        </div>

        <!-- 右側: テキストコンテンツ -->
        <div class="bg-white/70 backdrop-blur-sm rounded-lg p-6 min-h-48 flex flex-col justify-center">
          <p class="text-sm text-gray-600 mb-2">{experience.year}</p>
          <h3 class="text-xl font-bold text-gray-800 mb-2">{experience.eventName}</h3>
          <p class="text-sm text-gray-500 mb-4">{experience.location}</p>
          <p class="text-gray-600 leading-relaxed">{experience.description}</p>
        </div>
      </div>
    </div>
  ))}
</div>
