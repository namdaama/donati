---
interface Props {
  icon?: string;
  title?: string;
  subtitle: string;
  description: string;
  characterIconUrl?: string;
}

const { icon, title, subtitle, description, characterIconUrl } = Astro.props;
---

<div class="text-center mb-16">
  {characterIconUrl ? (
    <div class="mb-6 max-w-4xl mx-auto flex items-start gap-6">
      <!-- 左側: キャラクターアイコン -->
      <img src={characterIconUrl} alt={title} class="w-32 h-32 flex-shrink-0" />

      <!-- 右側: テキスト + ウェーブライン -->
      <div class="flex-1">
        <h2 class="section-title-news">{title}</h2>
        <div class="waveline-wrapper mt-3">
          <div class="flex justify-start">
            <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
            <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
            <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
          </div>
        </div>
      </div>
    </div>
  ) : (
    <>
      <div class="flex items-center justify-center mb-4">
        <span class="text-4xl mr-4">{icon}</span>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800">{title}</h2>
      </div>
      <div class="waveline-wrapper">
        <div class="flex justify-center">
          <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
          <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
          <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto flex-shrink-0" />
        </div>
      </div>
    </>
  )}
  <div class="bg-white/70 backdrop-blur-sm rounded-lg p-6 max-w-3xl mx-auto">
    <p class="text-xl text-blue-600 font-semibold mb-2">{subtitle}</p>
    <p class="text-lg text-gray-600 leading-relaxed">
      {description}
    </p>
  </div>
</div>
