---
const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/', label: 'ホーム' },
  { href: '/services', label: '事業紹介' },
  { href: '/achievements', label: '活動実績' },
  { href: '/about', label: 'スタッフ紹介' },
  { href: '/news', label: 'お知らせ' },
  { href: '/contact', label: 'お問い合わせ' },
];
---

<header class="bg-white shadow-md sticky top-0 z-50">
  <nav class="container-custom">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2">
        <span class="text-2xl font-bold text-deep-blue">DONATI</span>
        <span class="text-sm text-text-gray hidden sm:inline-block">サイエンス アンド スペース ラボ</span>
      </a>
      
      <!-- Desktop Navigation -->
      <ul class="hidden md:flex items-center space-x-6">
        {navItems.map((item) => (
          <li>
            <a 
              href={item.href} 
              class={`text-text-dark hover:text-space-blue transition-colors duration-200 font-medium
                ${currentPath === item.href ? 'text-space-blue border-b-2 border-space-blue' : ''}`}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden p-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <ul class="space-y-2">
        {navItems.map((item) => (
          <li>
            <a 
              href={item.href} 
              class={`block py-2 px-4 text-text-dark hover:bg-gray-100 rounded
                ${currentPath === item.href ? 'bg-gray-100 text-space-blue' : ''}`}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>