---
import SectionCloudyHeading from './SectionCloudyHeading.astro';

interface Props {
  title: string;
  description?: string;
  content?: string;
}

const { title, description, content } = Astro.props;
---

<section class="text-left mb-16">
  <!-- 大見出し（もくもく背景） -->
  <SectionCloudyHeading title={title} level="h1" />

  <!-- 小見出し（オプション） -->
  {description && (
    <h2 class="text-2xl font-bold leading-relaxed mt-6" style="color: #65B7EC; white-space: pre-line;">
      {description}
    </h2>
  )}

  <!-- 本文（オプション） -->
  {content && (
    <p class="leading-loose text-base mt-4" style="color: #58778D; white-space: pre-line;">
      {content}
    </p>
  )}
</section>
