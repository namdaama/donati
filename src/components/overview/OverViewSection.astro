---
import OverViewServiceCard from './OverViewServiceCard.astro';
import OverViewLinkCard from './OverViewLinkCard.astro';

interface ServiceCardData {
  title: string;
  titleSvg?: string;
  image: string;
  imageAlt: string;
  items: string[];
  link?: string;
}

interface LinkItem {
  textSvg: string;
  href: string;
  altText: string;
}

interface Props {
  scienceService: ServiceCardData;
  starryService: ServiceCardData;
  links: LinkItem[];
}

const {
  scienceService,
  starryService,
  links
} = Astro.props;
---

<section class="py-16 md:py-24 bg-transparent">
  <div class="max-w-4xl mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-stretch">
      <!-- サイエンス事業 -->
      <OverViewServiceCard
        title={scienceService.title}
        titleSvg={scienceService.titleSvg}
        image={scienceService.image}
        imageAlt={scienceService.imageAlt}
        items={scienceService.items}
        link={scienceService.link}
      />

      <!-- 星空事業 -->
      <OverViewServiceCard
        title={starryService.title}
        titleSvg={starryService.titleSvg}
        image={starryService.image}
        imageAlt={starryService.imageAlt}
        items={starryService.items}
        link={starryService.link}
      />

      <!-- 私たちについて（3つの小さいカード） -->
      <OverViewLinkCard {links} />
    </div>
  </div>
</section>
