---
interface LinkItem {
  textSvg: string;
  href: string;
  altText: string;
}

interface Props {
  links: LinkItem[];
}

const { links } = Astro.props;
---

<div class="overview-link-card-container flex flex-col h-full space-y-3">
  {links.map((link) => (
    <a href={link.href} class="flex-1 flex flex-col justify-center bg-white/95 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-shadow text-center">
      <img src={link.textSvg} alt={link.altText} class="h-7 mx-auto mb-3" />
      <img src="/images/svg/Parts/waveLine_752px.svg" alt="" class="w-full h-3" />
    </a>
  ))}
</div>

<style>
  .overview-link-card-container {
    max-width: 270px;
    margin: 0 auto;
  }

  @media (min-width: 1024px) {
    .overview-link-card-container {
      max-width: none;
    }
  }
</style>
