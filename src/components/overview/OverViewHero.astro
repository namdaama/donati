---
import DonatiLogo from '../common/DonatiLogo.astro';

// OverViewページのメインヒーローセクション
export interface Props {
  title: string;
  subtitle: string;
  ctaText: string;
  ctaLink: string;
}

const { title, subtitle, ctaText, ctaLink } = Astro.props;
---

<section class="relative py-8 md:py-12 overflow-hidden">
  <div class="container mx-auto px-4">
    <!-- 黄色背景のカード -->
    <div class="rounded-3xl p-6 md:p-10 shadow-xl relative overflow-hidden" style="background-color: rgb(246, 236, 50);">
      <!-- 上部の波線装飾 -->
      <div class="absolute top-0 left-0 right-0 h-6 overflow-hidden">
        <svg class="w-full h-full" viewBox="0 0 1200 24" preserveAspectRatio="none">
          <path d="M0,12 Q30,0 60,12 T120,12 T180,12 T240,12 T300,12 T360,12 T420,12 T480,12 T540,12 T600,12 T660,12 T720,12 T780,12 T840,12 T900,12 T960,12 T1020,12 T1080,12 T1140,12 T1200,12"
                fill="none"
                stroke="#FFD700"
                stroke-width="3"/>
        </svg>
      </div>

      <div class="flex flex-col lg:flex-row items-center justify-between gap-4 md:gap-8 pt-4">
        <!-- 左側: テキストコンテンツ -->
        <div class="lg:w-1/2 text-center lg:text-left">
          <div class="mb-4">
            <img src="/images/svg/Parts/text_AboutDonati.svg" alt="DONATIとは？" class="h-12 md:h-16 lg:h-20" />
          </div>
          <p class="text-base md:text-lg text-overview-dark-blue/80 mb-4 md:mb-6 leading-relaxed">
            {subtitle}
          </p>
          <a href={ctaLink} class="inline-block">
            <img src="/images/svg/Parts/icon_detailHere.svg" alt="詳しくはコチラ" class="h-10 md:h-12 hover:scale-105 transition-transform duration-300" />
          </a>
        </div>

        <!-- 右側: DONATIロゴ（背景画像付き・コンテナの3/5サイズ） -->
        <div class="lg:w-3/5 flex justify-end">
          <div class="w-full flex items-center justify-center shadow-lg p-6 md:p-8" style="background-image: url('/images/logoBackGround.png'); background-size: cover; background-position: center;">
            <DonatiLogo size="xlarge" />
          </div>
        </div>
      </div>

      <!-- 下部の波線装飾 -->
      <div class="absolute bottom-0 left-0 right-0 h-6 overflow-hidden">
        <svg class="w-full h-full" viewBox="0 0 1200 24" preserveAspectRatio="none">
          <path d="M0,12 Q30,24 60,12 T120,12 T180,12 T240,12 T300,12 T360,12 T420,12 T480,12 T540,12 T600,12 T660,12 T720,12 T780,12 T840,12 T900,12 T960,12 T1020,12 T1080,12 T1140,12 T1200,12"
                fill="none"
                stroke="#FFD700"
                stroke-width="3"/>
        </svg>
      </div>
    </div>
  </div>
</section>
