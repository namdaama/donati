---
export interface Props {
  text: string;
  href: string;
  size?: 'small' | 'medium' | 'large';
}

const {
  text,
  href,
  size = 'medium'
} = Astro.props;

// サイズ別の設定
const sizeMap = {
  small: 'h-8 md:h-10',
  medium: 'h-10 md:h-12',
  large: 'h-12 md:h-14'
};

const heightClass = sizeMap[size];
---

<a {href} class="button-container inline-block relative hover:opacity-90 transition-opacity duration-300">
  <img
    src="/images/svg/Parts/DetailButton.svg"
    alt=""
    class={`w-auto ${heightClass}`}
  />
  <span class="button-text">{text}</span>
</a>

<style>
  .button-container {
    display: inline-block;
    position: relative;
  }

  .button-text {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 16px;
    font-weight: 600;
    pointer-events: none;
    white-space: nowrap;
  }
</style>
