---
import SectionHeadingWithIcon from '../common/SectionHeadingWithIcon.astro';

interface Props {
  title: string;
  description?: string;
  iconPath?: string;
}

const { title, description, iconPath } = Astro.props;
---

<section class="mb-16">
  <div class="max-w-4xl mx-auto px-4">
    <!-- タイトル -->
    <SectionHeadingWithIcon
      title={title}
      iconPath={iconPath}
      waveLineCount={3}
    />

    <!-- 説明文（オプション） -->
    {description && (
      <p class="text-gray-700 mb-8 leading-relaxed">{description}</p>
    )}

    <!-- 子カテゴリーセクション -->
    <div class="space-y-6">
      <slot />
    </div>
  </div>
</section>
