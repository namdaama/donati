---
interface Props {
  title: string;
  level?: 'h1' | 'h2' | 'h3';
}

const { title, level = 'h2' } = Astro.props;
const Tag = level;
---

<div class="section-gray-heading-wrapper">
  <img
    src="/images/svg/Parts/sectionGrayRound.svg"
    alt=""
    class="section-gray-bg"
  />
  <Tag class="section-gray-heading">
    {title}
  </Tag>
</div>

<style>
  .section-gray-heading-wrapper {
    position: relative;
    width: 100%;
    height: 45px;
    margin-bottom: 1rem;
  }

  .section-gray-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: fill;
  }

  .section-gray-heading {
    position: relative;
    z-index: 1;
    color: white;
    font-weight: bold;
    font-size: 1.125rem; /* text-lg */
    padding: 0.75rem 1.5rem;
    text-align: left;
    margin: 0;
    line-height: 1.5;
    display: flex;
    align-items: center;
    height: 100%;
  }

  @media (max-width: 768px) {
    .section-gray-heading {
      font-size: 1rem; /* text-base */
      padding: 0.625rem 1.25rem;
    }
  }
</style>
