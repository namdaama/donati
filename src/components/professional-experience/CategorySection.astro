---
interface Service {
  serviceName: string;
  locations: string[];
}

interface Props {
  categoryTitle: string;
  services: Service[];
}

const { categoryTitle, services } = Astro.props;
---

<div class="bg-white/70 backdrop-blur-sm rounded-lg p-4 md:p-6 shadow-sm">
  <!-- カテゴリータイトル（グレーバー） -->
  <div class="bg-gray-400 text-white font-bold text-base md:text-lg rounded-full px-4 md:px-6 py-2 md:py-3 mb-4 text-center inline-block">
    {categoryTitle}
  </div>

  <!-- サービスごとの表示 -->
  {services.map((service, index) => (
    <div class={index > 0 ? 'mt-6' : 'mt-4'}>
      <!-- 中分類（太字） -->
      <p class="font-bold text-gray-700 mb-2">{service.serviceName}</p>

      <!-- 小分類（黒丸リスト） -->
      <ul class="space-y-2">
        {service.locations.map((location) => (
          <li class="flex items-start text-gray-700 leading-relaxed">
            <span class="mr-3 flex-shrink-0">●</span>
            <span>{location}</span>
          </li>
        ))}
      </ul>
    </div>
  ))}
</div>
