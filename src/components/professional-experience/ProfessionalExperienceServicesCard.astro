---
interface ListItem {
  text: string;
  href: string;
}

interface Props {
  listItems: ListItem[];
  link?: string;
}

const { listItems, link = '/services' } = Astro.props;
---

<div class="bg-white/95 rounded-2xl shadow-lg p-6 overflow-hidden flex flex-col">
  <!-- タイトルセクション -->
  <div class="text-center mb-4">
    <h3 class="text-xl font-bold text-gray-800 mb-2">サービス内容</h3>
    <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-3 mx-auto" />
  </div>

  <!-- リストアイテム -->
  <div class="flex items-center justify-center gap-4 mb-4 flex-grow">
    <img src="/images/svg/Parts/QA.svg" alt="" class="w-16 h-16 flex-shrink-0" />
    <ul class="space-y-1 text-left">
      {listItems.map((item) => (
        <li class="flex items-center">
          <span class="w-1.5 h-1.5 bg-overview-yellow rounded-full mr-2"></span>
          <a href={item.href} class="text-overview-dark-blue text-sm font-medium hover:text-blue-600 transition-colors">
            {item.text}
          </a>
        </li>
      ))}
    </ul>
  </div>

  <!-- 詳細リンク -->
  <div class="text-center mt-auto">
    <a href={link} class="inline-block">
      <img src="/images/svg/Parts/icon_detailHere.svg" alt="詳しくはコチラ" class="h-10 md:h-12 hover:scale-105 transition-transform duration-300" />
    </a>
  </div>
</div>
