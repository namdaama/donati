---
interface Props {
  title: string;
  items: string[];
}

const { title, items } = Astro.props;
---

<!-- セクションヘッダー -->
<div class="mt-16 mb-8 max-w-4xl mx-auto">
  <h3 class="text-2xl font-bold text-gray-800 mb-4">{title}</h3>
  <div class="waveline-wrapper">
    <div class="flex justify-start">
      <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto" />
      <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto" />
      <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-4 w-auto" />
    </div>
  </div>
</div>

<!-- メディア掲載リスト -->
<div class="max-w-4xl mx-auto bg-white/70 backdrop-blur-sm rounded-lg p-6 mb-24">
  <ul class="space-y-3">
    {items.map((item) => (
      <li class="flex items-start text-gray-600 leading-relaxed">
        <span class="text-gray-400 mr-3 flex-shrink-0">・</span>
        <span>{item}</span>
      </li>
    ))}
  </ul>
</div>
