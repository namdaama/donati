---
export interface Props {
  name: string;
  nameImage: string;
  image: string;
  description: string;
  achievements: string[];
  achievementsLink?: string;
  servicesLink?: string;
}

const {
  name,
  nameImage,
  image,
  description,
  achievements,
  achievementsLink = '/achievements',
  servicesLink = '/services'
} = Astro.props;
---

<div class="staff-card-transparent">
  <!-- キャラクターイラスト -->
  <div class="flex justify-center mb-4">
    <img src={image} alt={name} class="w-32 h-auto" />
  </div>

  <!-- 名前（SVG） -->
  <div class="flex justify-center mb-4">
    <img src={nameImage} alt={name} class="h-12 w-auto" />
  </div>

  <!-- 説明文 -->
  <p class="text-gray-600 leading-relaxed text-sm mb-4">
    {description}
  </p>

  <!-- 活動履歴 -->
  <div class="mb-4">
    <h4 class="text-gray-800 font-semibold text-sm mb-2">活動履歴</h4>
    <ul class="list-disc list-inside text-gray-600 text-sm space-y-1">
      {achievements.map((achievement) => (
        <li>{achievement}</li>
      ))}
    </ul>
  </div>

  <!-- ボタン -->
  <div class="flex gap-2 justify-center">
    <a href={achievementsLink} class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition text-sm">
      詳しい活動履歴
    </a>
    <a href={servicesLink} class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition text-sm">
      サービス内容
    </a>
  </div>
</div>

<style>
  .staff-card-transparent {
    background: transparent;
    display: flex;
    flex-direction: column;
    padding: 0;
  }
</style>
