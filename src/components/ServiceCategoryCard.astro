---
interface Props {
  icon?: string;
  title: string;
  description: string;
  link?: string;
  variant: 'science' | 'space' | 'flow';
}

const { icon, title, description, link, variant } = Astro.props;

const isFlowVariant = variant === 'flow';
const bgColor = isFlowVariant ? 'bg-yellow-50/80' : 'bg-white/80';
const buttonColor = 'bg-blue-600 hover:bg-blue-700';
---

<div class={`${bgColor} backdrop-blur-sm rounded-2xl shadow-lg p-6 text-center flex flex-col h-full`}>
  {/* Icon - only for science and space variants */}
  {icon && !isFlowVariant && (
    <div class="text-6xl mb-4">
      {icon}
    </div>
  )}

  {/* Title */}
  <h3 class="text-xl font-bold text-gray-800 mb-3">
    {title}
  </h3>

  {/* Description */}
  <p class="text-gray-600 mb-6 flex-grow">
    {description}
  </p>

  {/* Button - only for science and space variants */}
  {link && !isFlowVariant && (
    <a
      href={link}
      class={`inline-block ${buttonColor} text-white px-6 py-2 rounded-full transition-colors duration-300 font-semibold`}
    >
      もっと詳しく見る
    </a>
  )}
</div>
