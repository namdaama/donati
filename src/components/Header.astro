---
// OverViewページ専用のヘッダー（アイコンナビゲーション）
const navIcons = [
  { 
    icon: '⭐', 
    label: 'DONATI紹介', 
    href: '/about',
    description: 'DONATIについて'
  },
  { 
    icon: '🔬', 
    label: 'スタッフ', 
    href: '/staff',
    description: 'スタッフ紹介'
  },
  { 
    icon: '📖', 
    label: 'お知らせ', 
    href: '/news',
    description: 'お知らせ'
  },
  { 
    icon: '⚗️', 
    label: 'お仕事のこと', 
    href: '/services',
    description: 'お仕事について'
  },
  { 
    icon: '✉️', 
    label: 'お問い合わせ', 
    href: '/contact',
    description: 'お問い合わせ'
  }
];
---

<header class="bg-white/10 backdrop-blur-sm shadow-md">
  <div class="container mx-auto px-4 py-6">
    <div class="flex justify-between items-center">
      <!-- ロゴ（左上） -->
      <a href="/" class="flex items-center group">
        <h1 class="text-2xl font-bold text-overview-dark-blue group-hover:text-overview-sky transition-colors">
          DONATI
        </h1>
        <span class="text-sm text-gray-600 ml-2 hidden sm:block">
          サイエンス アンド スペース ラボ
        </span>
      </a>
      
      <!-- アイコンナビゲーション（右上） -->
      <nav class="flex items-center space-x-4 md:space-x-6">
        {navIcons.map((item) => (
          <a 
            href={item.href} 
            class="group flex flex-col items-center p-2 rounded-lg hover:bg-overview-sky/20 transition-colors duration-200"
            title={item.description}
          >
            <span class="text-2xl mb-1 group-hover:scale-110 transition-transform duration-200">
              {item.icon}
            </span>
            <span class="text-xs text-overview-dark-blue font-medium hidden md:block">
              {item.label}
            </span>
          </a>
        ))}
      </nav>
    </div>
  </div>
  
  <!-- 装飾的な波 -->
  <div class="h-2 bg-gradient-to-r from-overview-sky to-overview-yellow"></div>
</header>

<style>
  /* 星の装飾アニメーション */
  @keyframes twinkle {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }
  
  .group:hover span:first-child {
    animation: twinkle 1s ease-in-out;
  }
</style>