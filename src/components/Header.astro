---
// OverViewページ専用のヘッダー（アイコンナビゲーション）
const navIcons = [
  {
    iconSvg: '/images/svg/Parts/icon_AboutDonati.svg',
    label: 'DONATIとは？',
    href: '/about',
    description: 'DONATIについて'
  },
  {
    iconSvg: '/images/svg/Parts/icon_AboutUs.svg',
    label: '私たちについて',
    href: '/staff',
    description: 'スタッフ紹介'
  },
  {
    iconSvg: '/images/svg/Parts/icon_Info.svg',
    label: 'お知らせ',
    href: '/news',
    description: 'お知らせ'
  },
  {
    iconSvg: '/images/svg/Parts/icon_Services.svg',
    label: 'サービス内容',
    href: '/services',
    description: 'お仕事について'
  },
  {
    iconSvg: '/images/svg/Parts/icon_Contact.svg',
    label: 'お問合せ',
    href: '/contact',
    description: 'お問い合わせ'
  }
];
---

<header class="bg-white/10 backdrop-blur-sm shadow-md">
  <div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center">
      <!-- ロゴ（左上） - SVG + SEO対応 -->
      <a href="/" class="flex items-center group">
        <img
          src="/images/svg/Parts/homeLogo.svg"
          alt="サイエンス&スペースラボ DONATI"
          class="h-16 md:h-20 group-hover:opacity-80 transition-opacity"
        />
        <span class="sr-only">サイエンス&スペースラボ DONATI - ホームへ戻る</span>
      </a>

      <!-- アイコンナビゲーション（右上） -->
      <nav class="flex items-center space-x-6 md:space-x-8">
        {navIcons.map((item) => (
          <a
            href={item.href}
            class="group flex items-center justify-center p-3 rounded-lg hover:bg-overview-sky/20 transition-colors duration-200"
            title={item.description}
          >
            <img
              src={item.iconSvg}
              alt={item.label}
              class="h-14 md:h-[68px] w-auto group-hover:scale-110 transition-transform duration-200"
            />
          </a>
        ))}
      </nav>
    </div>
  </div>

  <!-- 装飾的な波線（複数並べて自然なパターンに） -->
  <div class="w-full overflow-hidden flex justify-center">
    <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-6 w-auto flex-shrink-0" />
    <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-6 w-auto flex-shrink-0" />
    <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-6 w-auto flex-shrink-0" />
    <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-6 w-auto flex-shrink-0" />
    <img src="/images/svg/Parts/waveLine.svg" alt="" class="h-6 w-auto flex-shrink-0" />
  </div>
</header>

<style>
  /* 星の装飾アニメーション */
  @keyframes twinkle {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }
  
  .group:hover span:first-child {
    animation: twinkle 1s ease-in-out;
  }
</style>